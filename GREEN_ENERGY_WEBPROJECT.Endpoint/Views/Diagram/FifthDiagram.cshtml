@{
    ViewData["Title"] = "Carbon Free Energy Map";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    var isAdmin = User.Identity.IsAuthenticated && User.Identity.Name == "admin@green.com";
}

<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<style>
    .diag-background {
        background-image: url('../images/leaf_4.png');
        min-height: 100vh;
        padding: 50px 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .diag-content {
        background-color: #c7dbbf;
        padding: 40px;
        border-radius: 20px;
        max-width: 1200px;
        width: 100%;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 17px;
        opacity: .95;
        margin-bottom: 30px;
    }

    .section-title {
        font-size: 22px;
        font-weight: bold;
        color: #00796b;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
    }

    th, td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: center;
    }

    th {
        background-color: #a5d6a7;
    }

    .save-button {
        background-color: #00796b;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: background-color 0.3s ease;
    }

        .save-button:hover {
            background-color: #005b50;
        }
</style>

<div class="diag-background">
    <div class="diag-content">
        <div class="section-title">Carbon Free Energy Percentage by Country (2023)</div>
        <div id="cfeMapChart" style="width: 100%; height: 600px;"></div>

        @if (isAdmin)
        {
            <form asp-action="SaveFifthDiagramDescription" method="post">
                <textarea name="description" style="width:100%; height:200px; padding:10px; font-size:1rem;">@ViewBag.FifthDiagramDescription</textarea>
                <br /><br />
                <button type="submit" class="save-button">Save</button>
            </form>
        }
        else
        {
            <p style="text-align: center; font-weight: bold;">
                @Html.Raw(ViewBag.FifthDiagramDescription)
            </p>
        }

        @* <p style="text-align: center; font-weight: bold;">
            The map illustrates the percentage of carbon-free energy usage by country for 2023.
            Higher saturation indicates a higher proportion of clean energy.
            It highlights which countries operate the greenest data centers and where further improvements are needed.
        </p> *@
    </div>

    <div class="diag-content">
        <p style="text-align: center; font-weight: bold;">On the map chart, we show the average carbon-free energy percentage per country. More precise data can be found in the table below.</p>
        

        <table>
            <thead>
                <tr>
                    <th>Country</th>
                    <th>Region</th>
                    <th>Factory</th>
                    <th>Unit</th>
                    <th>CFE %</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.CFETableData ?? new List<dynamic>())
                {
                    <tr>
                        <td>@item.Country</td>
                        <td>@item.Region</td>
                        <td>@item.Factory</td>
                        <td>@item.Unit</td>
                        <td>@item.CFE_Percentage</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        const cfeData = @Html.Raw(ViewBag.CFEDataJson ?? "[]");

        const countries = cfeData.map(item => item.Country);
        const percentages = cfeData.map(item => item.Percentage);

        var data = [{
            type: 'choropleth',
            locationmode: 'country names',
            locations: countries,
            z: percentages,
            colorscale: 'Greens',
            colorbar: {
                title: 'CFE %'
            },
            marker: {
                line: {
                    color: 'gray',
                    width: 0.5
                }
            }
        }];

        var layout = {
            title: 'Carbon Free Energy Percentage by Country (2023)',
            geo: {
                projection: {
                    type: 'natural earth'
                }
            },
            margin: { t: 50, l: 0, r: 0, b: 0 }
        };

        Plotly.newPlot('cfeMapChart', data, layout);
    </script>
}

@{
    ViewData["Title"] = "Water Usage Map";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

<style>
    .diag-background {
        background-image: url('../images/leaf_4.png');
        min-height: 100vh;
        padding: 50px 20px;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .diag-content {
        background-color: #c7dbbf;
        padding: 40px;
        border-radius: 20px;
        max-width: 1200px;
        width: 100%;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 17px;
        opacity: .95;
    }

    .section-title {
        font-size: 22px;
        font-weight: bold;
        color: #00796b;
        margin-bottom: 20px;
    }

    .filter-form {
        margin-bottom: 30px;
    }

        .filter-form select,
        .filter-form button {
            margin-right: 10px;
            padding: 6px 12px;
            font-size: 16px;
        }

        .filter-form button {
            background-color: #00796b;
            color: white;
            border: none;
            border-radius: 5px;
        }
</style>

<div class="diag-background">
    <div class="diag-content">
        <div class="section-title">Water Withdrawal by Region (Filtered)</div>

        <form asp-controller="Diagram" asp-action="ThirdDiagram" method="get" class="filter-form">
            @Html.DropDownList("factoryId", ViewBag.Factories as SelectList, "Select Factory", new { @class = "form-control", required = "required" })
            @Html.DropDownList("year", ViewBag.Years as SelectList, "Select Year", new { @class = "form-control", required = "required" })
            @Html.DropDownList("category", ViewBag.Categories as SelectList, "Select Category", new { @class = "form-control", required = "required" })
            <button type="submit">Update</button>
        </form>

        <div id="waterMapChart" style="width: 100%; height: 600px;"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <script>
        const waterData = @Html.Raw(ViewBag.WaterMapDataJson ?? "[]");

        const regionMap = {
            "Asia": ["CHN", "IND", "JPN", "KOR"],
            "Europe, Middle East, Africa": ["DEU", "FRA", "GBR", "ZAF", "ARE"],
            "Latin America": ["MEX", "BRA", "ARG"],
            "North America": ["USA", "CAN"]
        };

        let countries = [];
        let values = [];

        waterData.forEach(region => {
            const codes = regionMap[region.Region] || [];
            codes.forEach(code => {
                countries.push(code);
                values.push(region.Amount);
            });
        });

        const data = [{
            type: 'choropleth',
            locationmode: 'ISO-3',
            locations: countries,
            z: values,
            colorscale: 'Blues',
            colorbar: {
                title: 'Water Usage (ML)'
            },
            marker: {
                line: {
                    color: 'gray',
                    width: 0.5
                }
            }
        }];

        const layout = {
            title: 'Water Usage by Region (Filtered)',
            geo: {
                projection: {
                    type: 'natural earth'
                }
            },
            margin: { t: 50, l: 0, r: 0, b: 0 }
        };

        Plotly.newPlot('waterMapChart', data, layout);
    </script>
}